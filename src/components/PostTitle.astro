---
import { readableDate } from '$utils/helpers';

export interface Props {
    title: string;
    description: string;
    author: string;
    date: Date;
    readingTime: string;
}
const { title, description, author, date, readingTime } = Astro.props as Props

const formatedDate = readableDate(date);
---

<div class="heading">
    <h1>{title}</h1>
    <p class="description">{description}</p>
    <p class="data">{author} <span class="brand">/</span> {formatedDate}</p>
    <p class="reading">ðŸ“– {readingTime}</p>
    <!-- <div class="sub">
        <p>{author}</p>
        <div class="sep" />
        <p>{formatedDate}</p>
    </div> -->
</div>

<style lang="scss">
    .heading {
        text-align: center;

        margin-bottom: 4rem;

        h1 {
            font-size: var(--font-heading-big);
            font-weight: 500;
        }

        .description {
            font-size: var(--font-heading);
            font-style: italic;

            color: $gray-color;
        }

        .data {
            display: flex;
            justify-content: center;
            gap: 0.8rem;

            margin-top: 0.4rem;

            font-size: var(--font-heading-small);
            font-weight: 200;
            color: $gray-color;

            @media screen and (max-width: $breakpoint-sm) {
                flex-direction: column;
                gap: 0;
            }

            .brand {
                color: $brand-color;

                @media screen and (max-width: $breakpoint-sm) {
                    display: none;
                }
            }
        }

        .reading {
            font-size: var(--font-heading-small);
            font-weight: 200;

            color: $gray-color;

            margin-top: 0.8rem;
        }
    }
</style>